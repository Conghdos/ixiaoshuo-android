<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duowan="http://schemas.android.com/apk/res/com.duowan.mobile.ixiaoshuo"
    android:id="@+id/lotBookInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/book_shelf_bg_layer"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_cover_frame" >

                    <ImageView
                        android:id="@+id/imvBookCover"
                        android:layout_width="76dp"
                        android:layout_height="110dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover_less" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp">

                        <TextView
                                android:id="@+id/txvBookName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:textSize="18sp"
                                android:textColor="#4d4d4d"
                                android:singleLine="true"
                                android:ellipsize="marquee" />

                        <TextView
                                android:id="@+id/txvBookStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/red_flag"
                                android:layout_marginLeft="2dp"
                                android:textSize="10sp"
                                android:textColor="#ffffff"
                                android:singleLine="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txvBookAuthor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#808080"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txvBookCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:singleLine="true"
                                android:textColor="#808080"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txvBookCapacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#808080"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/imvBookAnotherType"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:background="@drawable/book_info_btn_voice_type_selector" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <Button
                    android:id="@+id/btnGotoListen"
                    android:layout_width="146dp"
                    android:layout_height="36dp"
                    android:background="@drawable/book_info_btn_green_selector"
                    android:text="@string/voice_listen"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnDownloadAll"
                    android:layout_width="146dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/book_info_btn_red_selector"
                    android:text="@string/download_all"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/finder_booklist_divider_layer" />
    </LinearLayout>

    <com.vincestyling.ixiaoshuo.ui.EllipseEndTextView
        android:id="@+id/txvBookSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        duowan:collapseBackground="@drawable/book_info_btn_expand_selector"
        duowan:lineSpacing="10dp"
        duowan:maxLines="4"
        duowan:textColor="#2b2b2b"
        duowan:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/book_info_chapter_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/btnChapterListReverse"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/book_info_chapter_btn_directory_selector"
            android:drawableRight="@drawable/book_info_chapter_arrow_down"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="目录"
            android:textColor="#724e2b"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>