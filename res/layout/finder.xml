<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lotBookFinder" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <view class="com.duowan.mobile.ixiaoshuo.ui.TitleBarLayout"
          android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center"
          android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="6dp" android:paddingBottom="10dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:background="@drawable/title_bg_content_area">

            <Button android:id="@+id/btnTextBookshelf" android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:background="@drawable/title_item_selected"
                    android:text="文字小说" android:textSize="20sp" android:textColor="#fefffc" />

            <Button android:id="@+id/btnVoiceBookshelf" android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_weight="1" android:background="@null"
                    android:text="有声读物" android:textSize="20sp" android:textColor="#b1d596" />

        </LinearLayout>

    </view>

    <com.duowan.mobile.ixiaoshuo.ui.FinderMenuGridView android:id="@+id/finderMenuView"
            android:layout_width="match_parent" android:layout_height="60dp"
            android:background="@drawable/book_shelf_bg_layer" />

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <com.duowan.mobile.ixiaoshuo.ui.ScrollLayout android:id="@+id/lotBookFinderContent"
                android:layout_width="match_parent" android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>