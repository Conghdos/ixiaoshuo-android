<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
              android:background="@color/reading_board_chapter_list_bg"
              android:visibility="gone">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg_layer"
            android:gravity="center_vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="目录"
                    android:textSize="20sp"
                    android:textColor="#ffffff" />

            <Button android:id="@id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/reading_board_arrow" />

        </FrameLayout>

    </LinearLayout>

    <ListView
            android:id="@+id/lsvChapterList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/reading_board_chapter_list_divider"
            android:dividerHeight="1dp"
            android:fastScrollEnabled="true"
            android:listSelector="@drawable/reading_board_chapter_list_bg_selector"
            android:cacheColorHint="@android:color/transparent" />

</LinearLayout>