<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:duowan="http://schemas.android.com/apk/res/com.duowan.mobile.ixiaoshuo"
        android:id="@+id/lotBookInfo"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:background="#ffffff">

    <LinearLayout android:layout_width="match_parent" android:layout_height="180dp" android:orientation="vertical"
                  android:background="@drawable/book_shelf_bg_layer">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                      android:orientation="vertical" android:paddingLeft="10dp" android:paddingTop="10dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:background="@drawable/book_cover_frame">

                    <ImageView android:id="@+id/imvBookCover" android:layout_width="76dp" android:layout_height="110dp"
                               android:src="@drawable/cover_less" android:scaleType="centerCrop" />

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical" android:layout_marginLeft="10dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                        <TextView android:id="@+id/txvBookName"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"
                                  android:textSize="20sp" android:textColor="#4d4d4d" android:singleLine="true" android:ellipsize="end" />

                        <TextView android:id="@+id/txvBookStatus"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:background="@drawable/red_flag" android:layout_marginLeft="2dp"
                                  android:textSize="10sp" android:textColor="#ffffff" android:singleLine="true" />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="5dp">

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                      android:layout_weight="1" android:orientation="vertical">

                            <TextView android:id="@+id/txvBookAuthor"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:singleLine="true" android:textSize="15sp" android:textColor="#808080" />

                            <TextView android:id="@+id/txvBookCategory"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:singleLine="true" android:textSize="15sp" android:textColor="#808080"
                                      android:layout_marginTop="5dp" android:layout_marginBottom="5dp" />

                            <TextView android:id="@+id/txvBookCapacity"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:singleLine="true" android:textSize="15sp" android:textColor="#808080" />

                        </LinearLayout>

                        <Button android:id="@+id/imvBookAnotherType"
                                   android:layout_width="90dp" android:layout_height="30dp"
                                   android:background="@drawable/book_info_btn_voice_type_selector" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">

                <Button android:id="@+id/btnGotoRead"
                        android:layout_width="146dp" android:layout_height="36dp"
                        android:text="阅读" android:textSize="18sp" android:textColor="#ffffff"
                        android:background="@drawable/book_info_btn_green_selector" />

                <Button android:id="@+id/btnDownloadAll"
                        android:layout_width="146dp" android:layout_height="36dp" android:layout_marginLeft="20dp"
                        android:text="下载全部" android:textSize="18sp" android:textColor="#ffffff"
                        android:background="@drawable/book_info_btn_red_selector" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/finder_booklist_divider_layer" />

    </LinearLayout>

    <com.duowan.mobile.ixiaoshuo.ui.EllipseEndTextView
            android:id="@+id/txvBookSummary"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"
            duowan:textSize="15sp" duowan:textColor="#2b2b2b" duowan:maxLines="5"
            duowan:collapseBackground="@drawable/book_info_btn_expand_selector" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp"
                  android:background="@drawable/book_info_chapter_bg">

        <Button android:id="@+id/btnChapterListReverse"
                android:layout_width="wrap_content" android:layout_height="30dp"
                android:text="目录" android:textColor="#724e2b" android:textSize="16sp"
                android:drawableRight="@drawable/book_info_chapter_arrow_down"
                android:paddingLeft="6dp" android:paddingRight="6dp"
                android:background="@drawable/book_info_chapter_btn_directory_selector" />

    </LinearLayout>

</LinearLayout>