<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/radar_view_main" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
         android:layout_gravity="center_horizontal"
        android:background="@drawable/radar_top_bg" >

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="8334" />
            

            <TextView
                android:id="@+id/user_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textSize="22dp"
                android:text="@string/user_count_txt"/>
        </LinearLayout>
    </LinearLayout>

    <com.duowan.mobile.ixiaoshuo.view.radar.Radar
        android:id="@+id/radar_"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/guide_img"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radar_tips" />

</LinearLayout>