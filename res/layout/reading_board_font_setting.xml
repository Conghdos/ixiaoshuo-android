<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lotFontSetting"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="12dp"
              android:visibility="gone">

    <TextView
            android:id="@+id/txvCurrentFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#aaaaaa" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/reading_board_two_items_menu_bg">

        <Button android:id="@+id/btnFontIncrease"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="A-"
                android:textSize="20dp"
                android:textColor="@color/reading_board_btn_text_on"
                android:background="@drawable/reading_board_two_items_menu_bg_selector" />

        <Button android:id="@+id/btnFontDecrease"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="A+"
                android:textSize="20dp"
                android:textColor="@color/reading_board_btn_text_on"
                android:background="@drawable/reading_board_two_items_menu_bg_selector" />

    </LinearLayout>

</LinearLayout>